<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroudn_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bojidar.weatherapp.HoursActivity">

    <Button
        android:id="@+id/back_button_hours"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back_white_arrow"
        android:layout_width="45dp"
        android:layout_height="42dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hours_city_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="City"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
        android:textSize="18sp"
        android:text="24h forecast"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_margin="25dp"
        android:id="@+id/hours_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
